<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/rl_chatOne">

    <LinearLayout
        android:id="@+id/ly_userImageContainer"
        android:layout_width="40sp"
        android:layout_height="40sp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/civ_userImage"
            app:civ_border_overlay="true"
            app:civ_border_width="2sp"
            android:layout_gravity="center"
            android:src="@drawable/ic_group_black_24dp"/>
    </LinearLayout>

    <TextView
        android:paddingLeft="10sp"
        android:layout_toRightOf="@+id/ly_userImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chatUserName"
        android:layout_alignParentTop="true"
        android:text="name"
        android:gravity="center_vertical"/>
    <TextView
        android:paddingLeft="10sp"
        android:layout_below="@+id/tv_chatUserName"
        android:layout_toRightOf="@+id/ly_userImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chatMessageOne"
        android:text="hai"
        android:textSize="11sp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"/>

</RelativeLayout>