<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enkiprobo.topicschat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_topics_chat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_topics_chat"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleInstance">

        </activity>
        <activity android:name=".RegistrationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".RegistrationSuccessActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".UserMainActivity"
            android:label="" />
        <activity
            android:name=".NewGroupActivity"
            android:label=""
            android:launchMode="singleInstance">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserMainActivity" />
        </activity>
        <activity android:name=".GroupChatActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserMainActivity" />
        </activity>

    </application>

</manifest>